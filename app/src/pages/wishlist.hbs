  <body>
    <div class="wrapper">
      <div class="content" role="main">
      <!-- This is the start of content for our page -->
<h1 class="title">Book Finder!</h1>

<!-- Add text indicating that we've changed color OR had an error -->
{{#if wishlist}}
  <p class="color-info">
    <span class="rainbow-text">WISHLIST!</span>
  </p>
{{/if}}

{{#if wishlistError}}
  <p class="color-info">
